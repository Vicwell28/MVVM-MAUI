<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMDemo.MVVM.Views.SumWithoutView"
             Title="SumWithoutView">
    <VerticalStackLayout
        VerticalOptions="Center" 
        HorizontalOptions="Center">
        <Entry Placeholder="Number 1" Text="{Binding sumWithOutModel.Num1}"/>
        <Entry Placeholder="Number 2" Text="{Binding sumWithOutModel.Num2}"/>
        <Entry Placeholder="Result" Text="{Binding sumWithOutModel.Num3}"/>

        <Button 
            Text="Calculate"
            HorizontalOptions="Center"
            Command="{Binding CalculateCommand}"/>

    </VerticalStackLayout>
</ContentPage>